<p id="notice"><%= notice %></p>

<h2>Games</h2>

<div class="row">
  <div class="col-8">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Start date</th>
            <th>End date</th>
          </tr>
        </thead>
        <tbody>
          <% if @games.blank? %>
            <tr><td colspan="4">No record found </td></tr>
          <% else %>
            <% @games.each do |game| %>
              <tr>
                <td><%= link_to game.title, game %></td>
                <td><%= game.description %></td>
                <td><%= date_format(game.start_date) %></td>
                <td><%= date_format(game.end_date) %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>
      
<%= link_to 'New Game', new_game_path, class: 'btn btn-primary' %>
