<div class="row mb-3">
  <div class="col-lg-6">
    <%= f.label :user_id, "Player", class: "form-label" %>
    <%= f.collection_select(:user_id, User.all, :id, :full_name, { :prompt => 'Select Player'}, { class: 'form-control' }) %>
  </div>
  <div class="col-lg-6">
    <%= f.label :score, class: "form-label" %>
    <%= f.number_field :score, placeholder: "Enter score", autofocus: true, required: true, class: 'form-control' %>
  </div>
</div>


