<%= form_with(model: game) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <div class="col-lg-6">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, placeholder: "Enter title", autofocus: true, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-lg-6">
      <%= form.label :description, 'Details', class: "form-label" %>
      <%= form.text_area :description, placeholder: "Enter details", autofocus: true, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-lg-6">
      <%= form.label :start_date, class: "form-label" %>
      <%= form.date_select :start_date, placeholder: "Enter start date", autofocus: true, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-lg-6">
      <%= form.label :end_date, class: "form-label" %>
      <%= form.date_select :end_date, placeholder: "Enter end date", autofocus: true, required: true, class: 'form-control' %>
    </div>
  </div>

  <%= form.fields_for :participants do |builder, index| %>
    <p>
      <strong>Participants</strong>
    </p>

    <%= render 'participant_form', :f => builder %>
  <% end %>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
