<h2><%= @member.full_name %></h2>

<div class="row">
  <div class="col-8">
    <div class="table-responsive">
      <table class= "table table-hover table-striped">
        <thead>
          <tr>
            <td colspan="2">Member stats</td>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>Number of Games </td>
            <td><%= @member_participants.size %></td>
          </tr>
          <tr>
            <td>Number of Wins</td>
            <td><%= @number_of_wins %></td>
          </tr>
          <tr>
            <td>Number of Losses</td>
            <td><%= @number_of_losses %></td>
          </tr>
          <tr>
            <td>Avg score</td>
            <td><%= @avg_score %></td>
          </tr>
          <tr>
            <td>Higest score</td>
            <td><%= @max_score %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>