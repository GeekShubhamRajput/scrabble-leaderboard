<p id="notice"><%= notice %></p>

<h2>Scrabble Leader Board</h2>

<div class="row">
  <div class="col-8">
    <div class="table-responsive">
      <table class= "table table-hover">
        <thead>
          <tr>
            <th>Player</th>
            <th>No of Game</th>
            <th>Aaverage Score</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% if @users.blank? %>
            <tr>
              <td colspan="3">No record found</td>
            </tr>
          <% else %>    
            <% @users.each do |player| %>
              <tr>
                <td><%= link_to player.full_name, member_path(player) %></td>
                <td><%= player.participants.size %></td>
                <td><%= player.participants.average(:score) %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div> 
</div>

